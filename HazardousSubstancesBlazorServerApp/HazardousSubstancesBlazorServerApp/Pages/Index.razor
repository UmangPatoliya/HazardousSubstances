@page "/"
@using HazardousSubstancesBlazorServerApp.Pages.Components
@using HazardousSubstancesBlazorServerApp.Model

<DxGridLayout CssClass="w-100 ch-480">
    <Rows>
        <DxGridLayoutRow Height="20%" />
        <DxGridLayoutRow Height="60%" />
        <DxGridLayoutRow Height="20%" />
    </Rows>
    <Columns>
        <DxGridLayoutColumn Width="25%" />
        <DxGridLayoutColumn Width="25%" />
        <DxGridLayoutColumn Width="50%" />
    </Columns>
    <Items>
        <DxGridLayoutItem Row="0" Column="0" ColumnSpan="2">
            <Template>
                <div class="gridlayout-header gridlayout-item">
                    <ProductInfo Product=@Product></ProductInfo>
                </div>
            </Template>
        </DxGridLayoutItem>
        <DxGridLayoutItem Row="1" Column="0">
            <Template>
                <div class="gridlayout-content gridlayout-item">
                    <ProductCarousel Product=@Product></ProductCarousel>
                </div>
            </Template>
        </DxGridLayoutItem>
        <DxGridLayoutItem Row="1" Column="1">
            <Template>
                <div class="gridlayout-left-side-bar gridlayout-item">
                    <ProductDesc Product=@Product></ProductDesc>
                </div>
            </Template>
        </DxGridLayoutItem>
        <DxGridLayoutItem Row="2" Column="0">
            <Template>
                <div class="gridlayout-right-side-bar gridlayout-item" style="background-color: yellow;">
                    <ProductStat></ProductStat>
                </div>
            </Template>
        </DxGridLayoutItem>
        <DxGridLayoutItem Row="0" Column="2" ColumnSpan="3">
            <Template>
                <div class="gridlayout-footer gridlayout-item">
                    <ProductPdf Product=@Product></ProductPdf>
                </div>
            </Template>
        </DxGridLayoutItem>
    </Items>
</DxGridLayout>

