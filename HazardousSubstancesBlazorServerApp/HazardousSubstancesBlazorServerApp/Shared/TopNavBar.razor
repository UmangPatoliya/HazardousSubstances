<style>
    .dropdown-menu{
        right: 1px !important;
    }
</style>
<nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Hazardous Substances</a>
        <button class="navbar-toggler" type="button" @onclick=@ToggleNavMenu data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse @NavMenuCssClass" id="navbarColor01">
            <ul class="navbar-nav col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <li class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
                    <form class="d-flex">
                        <input class="form-control me-sm-2" type="text" placeholder="Product">
                        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                    </form>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="#">
                        Home
                        <span class="visually-hidden">(current)</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Features</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Pricing</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">About</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle @DropDownCssClass" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true"
                       aria-expanded="false" @onclick=@ToggleDropDown>Dropdown</a>
                    <div class="dropdown-menu @DropDownCssClass">
                        <a class="dropdown-item" href="#">Action</a>
                        <a class="dropdown-item" href="#">Another action</a>
                        <a class="dropdown-item" href="#">Something else here</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">Separated link</a>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</nav>

@code {
    private bool collapseTopNavMenu = false;
    
    private bool collapseDropDown = false;

    private string? NavMenuCssClass => collapseTopNavMenu ? "show" : null;
    private string? DropDownCssClass => collapseDropDown ? "show" : null;

    private void ToggleNavMenu()
    {
        collapseTopNavMenu = !collapseTopNavMenu;
    }

    private void ToggleDropDown()
    {
        collapseDropDown = !collapseDropDown;
    }
}